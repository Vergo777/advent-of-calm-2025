{
    "$schema": "https://calm.finos.org/release/1.1/meta/calm.json",
    "$id": "https://example.com/patterns/company-base-pattern.json",
    "title": "Company Base Pattern",
    "description": "A governance pattern that enforces organizational standards (ownership, cost tracking, data classification, and encryption) on all nodes and relationships without constraining architectural structure.",
    "type": "object",
    "properties": {
        "nodes": {
            "type": "array",
            "items": {
                "$ref": "https://example.com/standards/company-node-standard.json"
            }
        },
        "relationships": {
            "type": "array",
            "items": {
                "$ref": "https://example.com/standards/company-relationship-standard.json"
            }
        }
    },
    "required": [
        "nodes",
        "relationships"
    ]
}